<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"  android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="@drawable/stars"
    android:id="@+id/new_planet_screen" tools:context="two.chapter.hello_world.NewPlanet">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22sp" android:id="@+id/addPlanetText"
        android:layout_alignBaseline="@+id/doneAddingButton" android:text="@string/add_planet_caption"
        android:layout_marginLeft="22dp" android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/button_name_done" android:id="@+id/doneAddingButton"
        android:layout_alignParentTop="true" android:layout_alignEnd="@+id/imageNeptune"
        android:layout_marginLeft="22dp" android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/imageEarth" android:src="@drawable/earth"
        android:contentDescription="@string/content_desc_earth" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_above="@+id/imageVenus"
        android:layout_alignStart="@+id/addPlanetText"/>

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/imageMars" android:src="@drawable/mars"
        android:contentDescription="@string/content_desc_earth" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_above="@+id/imageJupiter"
        android:layout_toEndOf="@+id/imageEarth" />

    <ImageView
        android:layout_width="wrap_content"  android:layout_height="wrap_content"
        android:id="@+id/imageVenus" android:src="@drawable/venus"
        android:contentDescription="@string/content_desc_earth" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_above="@+id/imageSaturn"
        android:layout_alignStart="@+id/addPlanetText" />

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/imageJupiter" android:src="@drawable/jupiter"
        android:contentDescription="@string/content_desc_earth" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_alignTop="@+id/imageVenus"
        android:layout_alignStart="@+id/imageMars" />

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/imageSaturn" android:src="@drawable/saturn"
        android:contentDescription="@string/content_desc_earth" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_alignTop="@+id/imageNeptune"
        android:layout_alignStart="@+id/addPlanetText" />

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/imageNeptune" android:src="@drawable/neptune"
        android:contentDescription="@string/content_desc_earth" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageJupiter" />

</RelativeLayout>

